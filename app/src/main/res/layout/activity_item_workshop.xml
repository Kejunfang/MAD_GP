<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/counsellor_card_bg"
    android:padding="16dp"
    android:layout_marginBottom="14dp"
    android:layout_marginHorizontal="16dp">

    <ImageView
        android:id="@+id/ivWorkshopImage"
        android:src="@drawable/stress"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWorkshopTitle"
            android:text="Workshop Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvWorkshopDesc"
            android:text="Description..."
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvWorkshopLocation"
            android:text="Location"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>