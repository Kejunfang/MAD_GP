<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an Avatar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgAv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/smile"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgAv2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/counsellor1"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgAv3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/counsellor2"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgAv4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/counsellor3"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgAv5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/counsellor4"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgAv6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/counsellor5"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"/>

    </GridLayout>

</LinearLayout>