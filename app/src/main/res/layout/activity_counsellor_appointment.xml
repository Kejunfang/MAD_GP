<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F1F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#00897B"
            android:padding="20dp">

            <ImageView
                android:id="@+id/counsellorImage"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/pfp_councellor1_removebg_preview"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/counsellorImage"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/counsellorName"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Mr. John Lee"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/counsellorTitle"
                    android:text="Mental Health Councellor"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:layout_height="30dp"
                    android:layout_width="200dp"  />

                <TextView
                    android:id="@+id/counsellorLocation"
                    android:text="Kuala Lumpur, Malaysia"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_height="30dp"
                    android:layout_width="200dp"  />
            </LinearLayout>

        </RelativeLayout>

        <!-- Choose Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:layout_margin="16dp"
            android:textStyle="bold" />

        <!-- Dates Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Monday -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Mon"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textAlignment="center"
                    android:layout_height="24dp"
                    android:layout_width="50dp"  />

                <TextView
                    android:id="@+id/dateMon"
                    android:text="11"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#444"
                    android:background="@drawable/date_circle"
                    android:layout_height="50dp"
                    android:layout_width="50dp"  />
            </LinearLayout>

            <!-- Tuesday -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tue"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textAlignment="center"
                    android:layout_height="24dp"
                    android:layout_width="50dp"  />

                <TextView
                    android:id="@+id/dateTue"
                    android:text="12"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#444"
                    android:background="@drawable/date_circle"
                    android:layout_height="50dp"
                    android:layout_width="50dp"  />
            </LinearLayout>

            <!-- Wednesday (selected) -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Wed"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textAlignment="center"
                    android:layout_height="24dp"
                    android:layout_width="50dp"  />

                <TextView
                    android:id="@+id/dateWed"
                    android:text="13"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/date_selected_circle"
                    android:layout_height="50dp"
                    android:layout_width="50dp"  />
            </LinearLayout>

            <!-- Thursday -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Thu"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textAlignment="center"
                    android:layout_height="24dp"
                    android:layout_width="50dp"  />

                <TextView
                    android:id="@+id/dateThu"
                    android:text="14"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#444"
                    android:background="@drawable/date_circle"
                    android:layout_height="50dp"
                    android:layout_width="50dp"  />
            </LinearLayout>

            <!-- Friday -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Fri"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textAlignment="center"
                    android:layout_height="24dp"
                    android:layout_width="50dp"  />

                <TextView
                    android:id="@+id/dateFri"
                    android:text="15"
                    android:layout_marginTop="6dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#444"
                    android:background="@drawable/date_circle"
                    android:layout_height="50dp"
                    android:layout_width="50dp"  />
            </LinearLayout>
        </LinearLayout>

        <!-- Time Slots -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Time Slot 1 -->
            <TextView
                android:id="@+id/slotMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:gravity="center"
                android:text="9 - 12 AM\nHospital name"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/time_selected" />

            <!-- Time Slot 2 -->
            <TextView
                android:id="@+id/slotAfternoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:gravity="center"
                android:text="3 - 5 PM\nHospital name"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:background="@drawable/time_unselected" />

            <!-- Time Slot 3 -->
            <TextView
                android:id="@+id/slotEvening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:gravity="center"
                android:text="6 - 8 PM\nHospital name"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:background="@drawable/time_unselected" />

        </LinearLayout>

        <!-- Book Now Button -->
        <Button
            android:id="@+id/bookbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:backgroundTint="#00897B" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:backgroundTint="#00897B" />

    </LinearLayout>
</ScrollView>
