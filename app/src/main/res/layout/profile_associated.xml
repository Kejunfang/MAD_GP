<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#9AF0C2"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Bar: Contains toggle tabs and add button -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:justifyContent="space-between"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_associated_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="My Events"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

        </RadioGroup>

    </LinearLayout>

    <!-- List: Displays events/mental health doctors -->

    <RadioButton
        android:id="@+id/rb_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Mental Health Doctors"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_associated"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:overScrollMode="never" />

</LinearLayout>